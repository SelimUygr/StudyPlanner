<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/transparentPurple">



    <TextView
        android:gravity="center"
        android:text="Study Coach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/idTextView"
        android:layout_marginBottom="70dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/orange"/>


    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginRight="250dp"
        android:text="ID"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginRight="250dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameEditTextMain"
        android:layout_width="wrap_content"
        android:layout_height="41sp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/idTextView"
        app:layout_constraintLeft_toRightOf="@id/idTextView"
        android:maxLength="19"/>

    <EditText
        android:maxLength="31"
        app:layout_constraintLeft_toRightOf="@id/passwordTextView"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/passwordTextView"
        android:id="@+id/passwordEditTextMain"
        android:layout_width="wrap_content"
        android:layout_height="41sp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName|textPassword"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="285dp" />

    <Button
        android:id="@+id/loginButton"
        app:layout_constraintTop_toBottomOf="@id/passwordTextView"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="100sp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Log In"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="390dp"
        android:background="@color/babyblue"/>

</androidx.constraintlayout.widget.ConstraintLayout>