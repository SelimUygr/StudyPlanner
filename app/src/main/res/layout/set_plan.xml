            android:textAlignment="center"
            android:gravity="center"/>

        <EditText
            android:id="@+id/lessonNameThree"
            android:layout_width="300sp"
            android:layout_height="40sp"
            app:layout_constraintLeft_toRightOf="@+id/third"
            app:layout_constraintBottom_toBottomOf="@+id/third"/>

        <EditText
            android:id="@+id/lessonNameThreeTimes"
            android:layout_width="30sp"
            android:layout_height="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/third"
            app:layout_constraintLeft_toRightOf="@+id/lessonNameThree"/>
        <TextView
            android:id="@+id/fourth"
            android:textSize="20sp"
            android:text="4."
            android:layout_width="wrap_content"
