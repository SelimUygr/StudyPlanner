        <EditText
            android:id="@+id/lessonNameSeven"
            android:layout_width="300sp"
            android:layout_height="40sp"
            app:layout_constraintLeft_toRightOf="@+id/seventh"
            app:layout_constraintBottom_toBottomOf="@+id/seventh"/>

        <EditText
            android:id="@+id/lessonNameSevenTimes"
            android:layout_width="30sp"
            android:layout_height="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/seventh"
            app:layout_constraintLeft_toRightOf="@+id/lessonNameSeven"/>

