            android:id="@+id/lessonNameTwo"
            android:layout_width="300sp"
            android:layout_height="40sp"
            app:layout_constraintLeft_toRightOf="@+id/second"
            app:layout_constraintBottom_toBottomOf="@+id/second"/>

        <EditText
            android:id="@+id/lessonNameTwoTimes"
            android:layout_width="30sp"
            android:layout_height="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/second"
            app:layout_constraintLeft_toRightOf="@+id/lessonNameFour"/>
        <TextView
            android:id="@+id/third"
            android:textSize="20sp"
            android:text="3."
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
