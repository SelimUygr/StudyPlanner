    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/widgetField"
        android:layout_width="347sp"
        android:layout_height="150sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/studyTime"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Available Study Time:"
            android:layout_width="wrap_content"
            android:layout_height="40sp"/>

        <EditText
            android:hint="Per Week"
            android:id="@+id/studyTimeEditText"
            android:layout_width="136sp"
            android:layout_height="40sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/studyTime"/>
        <Button
            android:id="@+id/cancelPlan"
            android:text="Cancel"
            app:layout_constraintTop_toBottomOf="@+id/studyTime"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="170sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/makePlan"
            android:text="Create"
            app:layout_constraintTop_toBottomOf="@+id/studyTime"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="170sp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>